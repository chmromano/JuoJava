<?xml version="1.0" encoding="utf-8"?>
<!-- Reference: https://www.youtube.com/watch?v=Z1w3y0saKjY -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/purple_500"/>
            <padding
                android:bottom="7dp"
                android:left="7dp"
                android:right="7dp"
                android:top="7dp" />
            <corners android:radius="20dp" />
        </shape>
    </item>

    <item
        android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/black"/>
            <padding
                android:bottom="7dp"
                android:left="7dp"
                android:right="7dp"
                android:top="7dp" />
            <corners android:radius="20dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">

            <solid android:color="@color/purple_200"/>

            <padding
                android:bottom="7dp"
                android:left="7dp"
                android:right="7dp"
                android:top="7dp" />

            <corners android:radius="20dp" />
        </shape>
    </item>
</selector>