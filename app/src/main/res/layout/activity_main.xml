<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"

    android:background="@color/black">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_main_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.08"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_main_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_main_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_menu_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.20"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_menu_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.005"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_menu_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.075"/>

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/ic_menu_white_24dp"
        app:layout_constraintTop_toBottomOf="@id/guideline_menu_top"
        app:layout_constraintStart_toEndOf="@id/guideline_main_start"
        app:layout_constraintEnd_toStartOf="@id/guideline_menu_end"
        app:layout_constraintBottom_toTopOf="@id/guideline_menu_bottom"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_intake"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/guideline_main_top"
        app:layout_constraintStart_toEndOf="@id/guideline_main_start"
        app:layout_constraintEnd_toStartOf="@id/guideline_main_end"
        app:layout_constraintDimensionRatio="1"
        app:cardCornerRadius="20dp">

        <TextView
            android:id="@+id/intake_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="100sp"
            android:text="Test" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_buttons"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/card_view_intake"
        app:layout_constraintStart_toEndOf="@id/guideline_main_start"
        app:layout_constraintEnd_toStartOf="@id/guideline_main_end"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">

            <Button
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/button3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/button2"
                android:id="@+id/button1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="20dp"
                android:text="250 mL" />

            <Button
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/button4"
                app:layout_constraintStart_toEndOf="@id/button1"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/button2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:text="250 mL" />

            <Button
                app:layout_constraintTop_toBottomOf="@id/button1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/button4"
                android:id="@+id/button3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="20dp"
                android:text="250 mL" />

            <Button
                app:layout_constraintTop_toBottomOf="@id/button2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/button3"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/button4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:text="250 mL" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>